/* 整体布局 */
page{
  display: flex;
  flex-direction: column;
  /* background: #252525; */
  color:rgb(129, 129, 129);
  height:100% ;
  overflow: hidden;
}

/* 标签页 */
.tab{
  display: flex;
}
.tab-item{
  flex: 1;
  font-size: 10pt;
  text-align: center;
  line-height: 72rpx;
  border-bottom: 6rpx solid #eee;
}
.tab-item.active{
  color: #252525;
  border-bottom-color: #252525
}

/* 内容 */
.content{
  flex: 1;
}
.content > swiper{
  height: 100%;
}

/* 播放器 */
.player{
  display: flex;
  align-items: center;
  background: rgba(122, 113, 113, 0.8);
  border-top: 1px solid #fff;
  height: 112rpx;
}
.player-cover{
  width: 80rpx;
  height: 80rpx;
  margin-left: 15rpx;
  border-radius: 8rpx;
  border: 1px solid #fff;
}
.player-info{
  flex: 1;
  font-size: 9pt;
  line-height:58rpx;
  margin-left: 20rpx;
  padding-top: 36rpx;
  padding-bottom: 8rpx;
}
.player-info-title{
  color:#fff
}
.player-info-singer{
  color:#fff;
  font-size: 7pt;
}
.player-info-singer{
  width: 150rpx;
  height: 80rpx;
  margin-right: 15rpx;
  margin-bottom: 2rpx;
}
.player-controls image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}

/* 音乐推荐界面 */
.content-info{
  height: 100%;
}
.content-info-slide{
  /* // width: 100%; */
   height: 302rpx;
   margin-bottom: 20px;
}
.i{
   width: 750rpx;
}
.content-info-image{
  width: 100%;
  height: 100%;
}
.content-info-portal{
  display: flex;
  margin-bottom: 15px;
}
.content-info-portal > view{
  flex: 1;
  font-size: 10pt;
  text-align: center;
}
.content-info-portal image{
  width: 66rpx;
  height: 66rpx;
  display: block;
  margin: 20rpx auto;
}
.content-info-list{
  font-size: 11pt;
  margin-bottom: 20rpx;
}
.content-info-list > .list-title{
  margin: 20rpx 35rpx;
}
.content-info-list > .list-inner{
  display: flex;
  flex-wrap: wrap;
  margin: 0 20rpx;
}
.content-info-list > .list-inner >.list-item{
  flex:1;
}
.content-info-list > .list-inner > .list-item > image{
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  border:1rpx solid #555
}
.content-info-list > .list-inner > .list-item > view {
  width: 200rpx;
  margin: 10rpx auto;
  font-size: 8pt;
}

/* 播放器界面 */
.content-play{
  display: flex;
  justify-content:space-around;
  flex-direction: column;
  height: 100%;
  text-align: center;
  background-color: rgba(122, 113, 113, 0.8);
}
.content-play-info{
  color:#333;
  text-align: center;
}
.content-play-info > view{
  color:rgb(82, 81, 81);
  font-size: 9pt;
}
.content-play-cover image{
  animation: rotateImage 10s linear infinite;
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  border: 1px soild #333;
}
@keyframes rotateImage{
  from{
    transform: rotate(0deg);
  }
  to{
    transform: rotate(360deg);
  }
}
.content-MV{
  width:100rpx;
  height:100rpx;
  align-self: flex-end;
  margin-right: 30rpx;
}
.content-MV image{
  width:100rpx;
  height:100rpx;
  border-radius:  30% 30%;
}
.content-play-progress{
  display: flex;
  align-items: center;
  margin: 0  35rpx;
  font-size: 9pt;
  text-align: center;
}
.content-play-progress > view{
  flex: 1;
}
.content-play-progress > text{
  color:#fff
}

/* 音乐列表界面 */
.mcontent-list{
  background-color: rgba(122, 113, 113, 0.8);
  height:100%;
}
.mlist-item{
  display: flex;
  align-items: center;
  border-bottom: 1rpx soild #333;
  height: 112rpx;
}
.mlist-cover{
  width: 80rpx;
  height: 80rpx;
  margin-left: 15rpx;
  border-radius: 8rpx;
  border:1px soild #333;
}
.mlist-info{
  flex: 1;
  font-size: 9pt;
  line-height:48rpx;
  margin-left: 20rpx;
  padding-top: 2rpx;
  padding-bottom: 8rpx;
}
.mlist-info-title{
  color: #fff;
}
.mlist-info-singer{
  color: #fff;
  font-size: 7pt;
}
.mlist-controls image{
  width: 45rpx;
  height: 45rpx;
  margin-right: 30rpx;
}
